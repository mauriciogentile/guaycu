extends ../../layout
block content
	.row
		.span1
			&nbsp;
		.span8
			div#create-post.form
				form#post(action="create",method="post")
					fieldset
						div.control-group
							label.control-label(for="title") Título
							input#title(name="title",type="text",value="#{title}", placeholder="título del post",required)
						div
							label(for="abstract") Resumen
							textarea#abstract.resumen(name="abstract",type="text",value="#{abstract}", placeholder="resumen del post",required)
						div
							label(for="body") Articulo
							textarea#body(name="body",type="text",value="#{body}",placeholder="artículo principal",required)
						div
							label(for="author") Autor
							input#author(name="author",type="text",value="#{author}",required)
						div
							label(for="image-url") Imagen Url
							input#image-url(name="image-url",value="",type="text",required)
						div
							input(name="submit",type="submit",value="Enviar",class="btn btn-large btn-primary")
							input(id="cancel-edit",type="button",value="Cancelar",class="btn btn-large btn-primary")
block scripts
	script(type='text/javascript',src="/js/post.js")