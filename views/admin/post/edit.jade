extends ../../layout
block content
	.row
		.span1
			&nbsp;
		.span8
			div#create-post
				form#post(action="create")
					fieldset
						div.control-group 
							label.control-label(for="title") #{post.title}
							input#title(name="title",type="text", placeholder="título del post",required,value="{post.title}")
						div
							label(for="abstract") Resumen
							textarea#abstract.resumen(name="abstract",type="text", placeholder="resumen del post",required)
						div
							label(for="body") Articulo
							textarea#body(name="body",type="text",placeholder="artículo principal",required)
						div
							label(for="author") Autor
							input#author(name="author",type="text",required)
						div
							label(for="image-url") Imagen Url
							input#image-url(name="image-url",type="text",required)
						div
							input(name="submit",type="submit",value="Enviar",class="btn btn-large btn-primary")
