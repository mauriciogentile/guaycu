extends ../../layout
block content
	.row
		.span1
			&nbsp;
		.span8
			div#posts
				table.table.table-striped.table-bordered.table-condensed
					thead
						tr
							th Título
							th Author
							th Creado Por
							th Fecha Publicación
							th Editar/Borrar
					tbody
						each post, i in posts
							tr
								td #{post.title}
								td #{post.author}
								td #{post.createdBy}
								td #{post.publishedAt}
								td
									a(href="edit/" + "#{post.id}") Editar
									span &nbsp;
									a(href="admin/delete") Borrar
